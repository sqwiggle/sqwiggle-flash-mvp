package com.sqwiggle {	import com.sqwiggle.Member;	import com.sqwiggle.Self;	import com.sqwiggle.GUID;	import flash.utils.Dictionary;	public class Conversation extends Object {		public var id:String;		private var length:Number;		private var members:Dictionary;				public function Conversation(conversationId:String = '') {			if (conversationId == '') {				this.id = GUID.create();			} else {				this.id = conversationId;			}						this.members = new Dictionary();		}						public function addMember(member:Member):void {			trace('Conversation:addMember', member.userId);						members[member.userId] = member;			member.audioOn();			length++;		}						public function removeMember(member:Member):void {			trace('Conversation:removeMember', member.userId);			delete members[member.userId];			member.audioOff();			length--;		}						public function hasMember(member:Member):Boolean {			return !!members[member.userId];		}						public function isEmpty():Boolean {			return length == 1;		}						public function getMembers():Dictionary {			return members;		}	}}